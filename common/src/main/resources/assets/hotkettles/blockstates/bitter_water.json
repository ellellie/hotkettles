{
  "multipart": [
    {
      "apply": {
        "model": "hotkettles:block/upside_down_mug_model"
      },
      "when": {
        "upside_down": "true"
      }
    },
    {
      "apply": {
        "model": "hotkettles:block/bitter_water_model"
      },
      "when": {
        "upside_down": "false"
      }
    },
    {
      "apply": {
        "model": "hotkettles:block/steam_model"
      },
      "when": {
        "hot": "true"
      }
    }
  ]
}